{
  "name": "shopping-system",
  "version": "1.0.0",
  "description": "A shopping system.",
  "author": "stephenliu <stephenlyao@yeah.net>",
  "private": true,
  "scripts": {
    "dev-client": "webpack-dev-server --inline --progress --config client/build/webpack.dev.conf.js",
    "dev-admin": "webpack-dev-server --inline --progress --config admin/build/webpack.dev.conf.js",
    "dev-server": "backpack dev",
    "build-client": "node client/build/build.js",
    "build-admin": "node admin/build/build.js",
    "build-server": "backpack build",
    "start-app": "cross-env NODE_ENV=production pm2 start server/app.js --node-args='--harmony'",
    "restart-app": "cross-env NODE_ENV=production pm2 restart server/app.js --node-args='--harmony'",
    "start-db": "mongod --fork --dbpath ./db/data --logpath ./db/logs/mongodb.log",
    "stop-db": "mongo --eval \"db.getSiblingDB('admin').shutdownServer()\"",
    "unit": "cross-env BABEL_ENV=test karma start test/unit/karma.conf.js --single-run",
    "test": "npm run unit",
    "lint": "eslint --ext .js,.vue src test/unit/specs"
  },
